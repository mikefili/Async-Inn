@model AsyncInn.Models.RoomAmenities

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}
<h2 class="pad-top-s CRUD">Delete An Amenity</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="center pad-top-s">
    <dl class="grey container-m">
        <dt class="pad-top-s">
            Amenity: @Html.DisplayFor(model => model.Amenities.Name)
        </dt>
        <dt class="">
            @Html.DisplayNameFor(model => model.Room): @Html.DisplayFor(model => model.Room.Name)
        </dt>
        <form asp-action="Delete">
            <input type="hidden" asp-for="AmenitiesID" />
            <input type="hidden" asp-for="RoomID" />
            <input type="submit" value="Delete" class="button" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </dl>
</div>