@model AsyncInn.Models.RoomAmenities

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html>
<head>
    <title>Async Inn Admin: </title>
    <link href="~/Reset.css" rel="stylesheet" />
    <link href="~/BaseStyles.css" rel="stylesheet" />
</head>
<body>
    <h1 class="welcome">Welcome to the <span class="logo">ASYNC INN</span> Admin Page</h1>
    <ul class="navigation">
        <li><a href="~/">Home</a></li>
        <li><a href="~/Hotels">Hotels</a></li>
        <li><a href="~/Rooms">Rooms</a></li>
        <li><a href="~/HotelRooms">Room Details</a></li>
        <li><a href="~/RoomAmenities">Room Amenities</a></li>
        <li><a href="~/Amenities">Update Amenities</a></li>
    </ul>

    <h2 class="pad-top-s CRUD">Add A New Amenity</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AmenitiesID" class="control-label"></label>
                    <select asp-for="AmenitiesID" class="form-control" asp-items="ViewBag.AmenitiesID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="RoomID" class="control-label"></label>
                    <select asp-for="RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</body>
</html>