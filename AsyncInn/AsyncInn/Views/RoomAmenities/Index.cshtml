@model IEnumerable<AsyncInn.Models.RoomAmenities>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}
<p class="pad-top-s pad-bottom-s">
    <a asp-action="Create" class="CRUD">Add Amenities To A Room</a>
</p>
<div class="center">
    <table class="grey container-xl">
        <thead>
            <tr>
                <th class="pad-top-s pad-bottom-xs emphasize-caps">
                    @Html.DisplayNameFor(model => model.Amenities)
                </th>
                <th class="emphasize-caps">
                    @Html.DisplayNameFor(model => model.Room)
                </th>
                <th class="emphasize-caps">UPDATE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="">
                        @Html.DisplayFor(modelItem => item.Amenities.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { item.AmenitiesID, item.RoomID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>