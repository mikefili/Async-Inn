@model AsyncInn.Models.HotelRoom

@{
    ViewData["Title"] = "Delete";
}
<!DOCTYPE html>
<html>
<head>
    <title>Async Inn Admin: </title>
    <link href="~/Reset.css" rel="stylesheet" />
    <link href="~/BaseStyles.css" rel="stylesheet" />
</head>
<body>
    <h1 class="welcome">Welcome to the <span class="logo">ASYNC INN</span> Admin Page</h1>
    <ul class="navigation">
        <li><a href="~/" class="nav-s">Home</a></li>
        <li><a href="~/Hotels" class="nav-s">Hotels</a></li>
        <li><a href="~/Rooms" class="nav-s">Rooms</a></li>
        <li><a href="~/HotelRooms" class="on-page">Room Details</a></li>
        <li><a href="~/RoomAmenities" class="nav-s">Update Amenities</a></li>
        <li><a href="~/Amenities" class="nav-s">Amenities</a></li>
    </ul>

    <h2 class="pad-top-s CRUD">Delete Hotel Room Details</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div class="center pad-top-s">
        <dl class=" grey container-m">
            <dt class="pad-top-s">
                @Html.DisplayNameFor(model => model.RoomNumber): @Html.DisplayFor(model => model.RoomNumber)
            </dt>
            <dt class="">
                @Html.DisplayNameFor(model => model.Rate):                 @Html.DisplayFor(model => model.Rate)
            </dt>
            <dt class="">
                @Html.DisplayNameFor(model => model.PetFriendly):                 @Html.DisplayFor(model => model.PetFriendly)
            </dt>
            <dt class="">
                @Html.DisplayNameFor(model => model.Hotel):                 @Html.DisplayFor(model => model.Hotel.FormattedAddress)
            </dt>
            <dt class="">
                @Html.DisplayNameFor(model => model.Room):                 @Html.DisplayFor(model => model.Room.Name)
            </dt>
            <form asp-action="Delete">
                <input type="hidden" asp-for="HotelID" />
                <input type="hidden" asp-for="RoomID" />
                <input type="submit" value="Delete" class="button pad-top-xs" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </dl>
    </div>
</body>
</html>