@model AsyncInn.Models.Amenities

@{
    ViewData["Title"] = "Delete";
    Layout = "_Layout";
}
<h2 class="pad-top-s CRUD">Delete An Amenity</h2>
<div class="center">
    <dl class="center grey container-m">
        <h3 class="pad-top-s">Are you sure you want to delete this amenity?</h3>
        <dd class="center pad-top-s welcome">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="button" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </dl>
</div>