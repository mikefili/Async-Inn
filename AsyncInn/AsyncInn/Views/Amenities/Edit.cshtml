@model AsyncInn.Models.Amenities

@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html>
<head>
    <title>Async Inn Admin: </title>
    <link href="~/Reset.css" rel="stylesheet" />
    <link href="~/BaseStyles.css" rel="stylesheet" />
</head>
<body>
    <h1 class="welcome">Welcome to the <span class="logo">ASYNC INN</span> Admin Page</h1>
    <ul class="navigation">
        <li><a href="~/" class="nav-s">Home</a></li>
        <li><a href="~/Hotels" class="nav-s">Hotels</a></li>
        <li><a href="~/Rooms" class="nav-s">Rooms</a></li>
        <li><a href="~/HotelRooms" class="nav-s">Room Details</a></li>
        <li><a href="~/RoomAmenities" class="nav-s">Update Amenities</a></li>
        <li><a href="~/Amenities" class="on-page">Amenities</a></li>
    </ul>
    <h2 class="pad-top-s CRUD">Edit Amenities</h2>
    <div class="center">
        <div class="center">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class=""></div>
                <input type="hidden" asp-for="ID" />
                <div class="grey container-m">
                    <label asp-for="Name" class=""></label>
                    <input asp-for="Name" class="input" />
                    <span asp-validation-for="Name" class=""></span>
                    <p><input type="submit" value="Save" class="button" /></p>
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>