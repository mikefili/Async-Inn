@model AsyncInn.Models.Room

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}
<h2 class="pad-top-s CRUD">Create A Room</h2>
<div class="center">
    <div class="center">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class=""></div>
            <div class="grey container-m">
                <div class="pad-top-xs pad-bottom-xs">
                    <label asp-for="Name" class=""></label>
                    <input asp-for="Name" class="" />
                    <span asp-validation-for="Name" class=""></span>
                </div>
                <div class="pad-bottom-xs">
                    <label asp-for="Layout" class=""></label>
                    <select asp-for="Layout" class="" asp-items="@Html.GetEnumSelectList<AsyncInn.Models.Layout>()"></select>
                    <span asp-validation-for="Layout" class=""></span>
                </div>
                <div class="">
                    <input type="submit" value="Create" class="button" />
                </div>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>