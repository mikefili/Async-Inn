@model AsyncInn.Models.Room

@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html>
<head>
    <title>Async Inn Admin: Edit A Room</title>
    <link href="~/Reset.css" rel="stylesheet" />
    <link href="~/BaseStyles.css" rel="stylesheet" />
</head>
<body>
    <h1 class="welcome">Welcome to the <span class="logo">ASYNC INN</span> Admin Page</h1>
    <ul class="navigation">
        <li><a href="~/" class="nav-s">Home</a></li>
        <li><a href="~/Hotels" class="nav-s">Hotels</a></li>
        <li><a href="~/Rooms" class="on-page">Rooms</a></li>
        <li><a href="~/HotelRooms" class="nav-s">Room Details</a></li>
        <li><a href="~/RoomAmenities" class="nav-s">Update Amenities</a></li>
        <li><a href="~/Amenities" class="nav-s">Amenities</a></li>
    </ul>

    <h2 class="pad-top-s CRUD">Edit A Room</h2>
    <div class="center">
        <div class="center">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class=""></div>
                <input type="hidden" asp-for="ID" />
                <div class="grey container-l">
                    <div class="pad-top-s container-m auto-margin align-left">
                        <label asp-for="Name" class=""></label>
                        <input asp-for="Name" class="input" />
                        <span asp-validation-for="Name" class=""></span>
                        <br />
                        <label asp-for="Layout" class=""></label>
                        <select asp-for="Layout" class="input" asp-items="@Html.GetEnumSelectList<AsyncInn.Models.Layout>()"></select>
                        <span asp-validation-for="Layout" class=""></span>
                        <input type="submit" value="Save" class="button" />
                        <span class="center pad-top-xs"><a asp-action="Index" class="">Back to List</a></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>